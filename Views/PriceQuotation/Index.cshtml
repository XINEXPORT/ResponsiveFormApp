@model PriceQuotation.Models.PriceQuotationModel

@{
    ViewData["Title"] = "Price Quote Calculator";
    Layout = "_Layout";
}

<header class="bg-primary text-white text-center p-4 mb-4">
    <div class="container">
        <h1 class="m-0">
            <i class="fas fa-money-bill-wave"></i> Price Quotation Calculator
        </h1>
    </div>
</header>

<div class="container mt-5">
    <h2 class="text-center mb-4">Calculate Your Price Quote</h2>

    <form asp-action="Index" method="post" class="mt-4">

        <div class="form-group row mb-3">
            <label asp-for="Subtotal" class="col-md-4 col-form-label">Subtotal</label>
            <div class="col-md-4">
                <input asp-for="Subtotal" class="form-control" />
            </div>
            <div class="col-md-4">
                <span asp-validation-for="Subtotal" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="DiscountRate" class="col-md-4 col-form-label">Discount Rate (%)</label>
            <div class="col-md-4">
                <input asp-for="DiscountRate" class="form-control" />
            </div>
            <div class="col-md-4">
                <span asp-validation-for="DiscountRate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-md-4 col-form-label">Discount Amount</label>
            <div class="col-md-4">
                <input value="@((Model.DiscountAmount.HasValue ? Model.DiscountAmount.Value.ToString("C2") : "$0.00"))" class="form-control" readonly />
            </div>
            <div class="col-md-4">
            </div>
        </div>

        <div class="form-group row mb-4">
            <label class="col-md-4 col-form-label">Total</label>
            <div class="col-md-4">
                <input value="@((Model.Total.HasValue ? Model.Total.Value.ToString("C2") : "$0.00"))" class="form-control" readonly />
            </div>
            <div class="col-md-4">
            </div>
        </div>
        <div class="form-group row mb-4">
            <label class="col-md-4 col-form-label">Remaining Percentage Rate</label>
            <div class="col-md-4">
                <input value="@Model.YouSavePercentage?.ToString("0.0")%" class="form-control" readonly />
            </div>
            <div class="col-md-4">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-4">
            </div>
            <div class="col-md-4 d-flex justify-content-between">
                <button type="submit" class="btn btn-primary w-100 mr-2">Calculate</button>
                <a asp-action="Index" class="btn btn-primary w-100 ml-2">Clear</a>
            </div>
            <div class="col-md-4">
            </div>
        </div>

    </form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
